@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    var rootItem = Model.Ancestor("home");
    var root = (Home)rootItem;
}
<div class="container-fluid pt-0">
    <div class="container">
        <section>
            <h2 class="text-extrabold"><span style="color: #333">Featured</span> <span style="color: #f99d3a">Virtual Office Locations</span></h2>
            <div class="orange-divider-2px"></div>
            @Html.Raw(Model.Value("featuredLocationParagraph"))
            <div class="spacer-sm"></div>
            <div class="owl-carousel owl-theme" id="cards-group-four">
                 @{
                    foreach (var item in root.ChildrenOfType("cityItems"))
                    {
                        foreach (var building in item.ChildrenOfType("buildings"))
                        {
                            foreach (var featuredItem in building.ChildrenOfType("locationsVirtualOffices"))
                            {
                                var featured = (LocationsVirtualOffices)featuredItem;

                                if (featured.FeaturedPhoto != null)
                                {
                                    <div class="card-effect">
                                        <div class="card w-100 shadow mb-3 bg-white rounded justify-content-center">

                                            <a href="@featured.Url">
                                                <img class="card-img-top img-fluid"
                                                     style="max-width:100%; height: 300px; object-fit: cover"
                                                     src="@featured.FeaturedPhoto.Url"
                                                     loading="lazy"
                                                     alt="@featured.FeaturedPhoto.Name">
                                            </a>

                                            <div class="card-body d-flex flex-column mt-auto">
                                                <a href="@featured.Url">
                                                    <h4 class="card-title text-semibold text-orange">
                                                        @featured.FeaturedBuildingName
                                                    </h4>
                                                </a>
                                                <h5>
                                                    <i class="fa fa-map-marker-alt" aria-hidden="true"></i>&nbsp;
                                                    @featured.FeaturedBuildingCity
                                                </h5>
                                                <div class="spacer-sm"></div>
                                                <div class="card-text">@Html.Raw(featured.FeaturedDescription)</div>

                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    }
                }
            </div>
        </section>
    </div>
</div>