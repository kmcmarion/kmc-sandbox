@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Web
@{
    Layout = "master.cshtml";
}

<div class="kv-banner-100vh" style="background: linear-gradient( rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6))" id="kvSection">
    <img srcset="@Model.KeyVisualMobile.Url 480w,
             @Model.KeyVisual.Url 800w"
         sizes="(max-width: 600px) 480px,
            800px"
         src="@Model.KeyVisual.Url"
         alt="KMC Key Visual"
         class="img-bg">
    <div class="container vertical-center-transform" id="kvSectionContainer">
        <div>
            @Html.Raw(Model.KVslogan)
        </div>          
    </div>
</div>

<!-- Mobile KV Section -->
<div class="kv" id="mobile-KvSection">
    <img class="img-fluid"
         data-src="@Model.KeyVisualMobile.Url"
         height="300" />

    <div class="container-fluid" style="padding-bottom: 0;">
        <div class="container">
            <div>
                @Html.Raw(Model.KVslogan)
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    @*CASA by KMC Overview*@
    <div class="container-fluid pt-0 mb-5 desktop-view">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="container overlap_left"
                         style="position: relative;
                                height: 500px;">

                        <img class="img-fluid img_object-fit img-overlap-style"
                             src="@Model.LeftSupportingImage.Url"
                             alt="@Model.LeftSupportingImageAltTag"
                             title="@Model.LeftSupportingImageAltTag" />
                    </div>
                    <div class="overlap_border_left"></div>
                </div>

                <div class="col-12 col-lg-6 overlap_contents">
                    @Html.Raw(Model.RightHeading)
                    @Model.RightSubHeading
                    <div class="orange-divider"></div>
                    @Html.Raw(Model.RightDescription)
                    <a href="@Model.RightButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@Model.RightButtonText</a>
                </div>

            </div>
        </div>
    </div>

    <div class="mobile-view">
        <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
             src="@Model.LeftSupportingImage.Url"
             alt="@Model.LeftSupportingImageAltTag"
             title="@Model.LeftSupportingImageAltTag" />

        <div class="container-fluid">
            <div class="container">
                @Html.Raw(Model.RightHeading)
                @Model.RightSubHeading
                <div class="orange-divider"></div>
                @Html.Raw(Model.RightDescription)
                <a href="@Model.RightButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@Model.RightButtonText</a>
            </div>
        </div>
    </div>

    @*Ready for You - Cards*@
    <div class="container">
        <h2 class="text-extrabold">Ready for You <span class="text-orange">Office Spaces</span></h2>
        @*<p class="text-semibold">Our Creatively Crafted Collection of  Spaces</p>*@
        <div class="orange-divider-2px"></div>

        <div class="row">

            @{
                foreach (var item in Model.Children)
                {
                    if (item.Name == "Home Page - Cards")
                    {
                        foreach (var cardGroup in item.Children)
                        {
                            if (cardGroup.IsDocumentType("readyForYouCards"))
                            {
                                var cardItem = (ReadyForYouCards)cardGroup;

                                <div class="col-lg-4 col-md-4 col-sm-12 col-12 d-flex align-items-stretch card-effect">
                                    
                                     <div class="card shadow mb-3 bg-white rounded w-100">
                                        <figure class="card-img-style">
                                            <a href="@cardItem.CardLink"
                                                onclick="@cardItem.CTaonclick">
                                                <img class="card-img-top img-fluid img_object-fit"
                                                     data-src="@cardItem.CardImage.Url"
                                                     alt="@cardItem.CardImageAltTag"
                                                     title="@cardItem.CardImageAltTag"
                                                     loading="lazy">
                                            </a>
                                            
                                        </figure>
                                        <div class="card-body d-flex flex-column">

                                            <h3 class="card-title text-semibold"><a href="@cardItem.CardLink" onclick="@cardItem.CTaonclick">@cardItem.CardTitle</a></h3>
                                            <div class="card-text text-limit">@cardItem.CardDescription</div>

                                            <a class="card-link mt-auto" 
                                                href="@cardItem.CardLink"
                                                onclick="@cardItem.CTaonclick"
                                                >
                                                Read More
                                            </a>
                                        </div>
                                    </div>
                                    
                                </div>
                            }
                        }
                    }
                }
            }
        </div>
    </div>
    <div class="spacer-md"></div>

    @*Made For You Cards Section*@
    <div class="container">
        <h2 class="text-extrabold">Made for You <span class="text-orange">Office Spaces</span></h2>
        @*<p class="text-semibold">Our Tailored Created Spaces</p>*@
        <div class="orange-divider-2px"></div>

        <div class="row">
            @{
                foreach (var item in Model.Children)
                {
                    if (item.Name == "Home Page - Cards")
                    {
                        foreach (var cardGroup in item.Children)
                        {
                            if (cardGroup.IsDocumentType("madeForYouCards"))
                            {
                                var cardItem = (MadeForYouCards)cardGroup;

                                <div class="col-lg-4 col-md-4 col-sm-12 col-12 d-flex align-items-stretch card-effect">
                                    <div class="card shadow mb-3 bg-white rounded w-100">
                                        <figure class="card-img-style">
                                            <a href="@cardItem.CardLink"
                                                onclick="@cardItem.CTaonclick"
                                               >
                                                    <img class="card-img-top img-fluid img_object-fit"
                                                         data-src="@cardItem.CardImage.Url"
                                                         alt="@cardItem.CardImageAltTag"
                                                         title="@cardItem.CardImageAltTag"
                                                         loading="lazy">
                                                </a>
                                        </figure>
                                        <div class="card-body d-flex flex-column">

                                            <h3 class="card-title text-semibold"><a href="@cardItem.CardLink" onclick="@cardItem.CTaonclick">@cardItem.CardTitle</a></h3>
                                            <div class="card-text text-limit">@cardItem.CardDescription</div>

                                            <a class="card-link mt-auto" 
                                                href="@cardItem.CardLink"
                                                onclick="@cardItem.CTaonclick">
                                                Read More
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                }
            }
        </div>
    </div>
    <div class="spacer-md"></div>

    @*KMC People cards section*@
    <div class="container">

        <h2 class="text-extrabold">KMC <span class="text-orange">People</span></h2>
        <div class="orange-divider-2px"></div>

        <div class="row">

            @{
                foreach (var item in Model.Children)
                {
                    if (item.Name == "Home Page - Cards")
                    {
                        foreach (var cardGroup in item.Children)
                        {
                            if (cardGroup.IsDocumentType("kmcPeopleCards"))
                            {
                                var cardItem = (KMcpeopleCards)cardGroup;

                                <div class="col-lg-4 col-md-4 col-sm-12 col-12 d-flex align-items-stretch card-effect">
                                    <div class="card shadow mb-3 bg-white rounded w-100">
                                        <figure class="card-img-style">
                                            <a href="@cardItem.CardLink"
                                                onclick="@cardItem.CTaonclick">
                                                    <img class="card-img-top img-fluid img_object-fit"
                                                         data-src="@cardItem.CardImage.Url"
                                                         alt="@cardItem.CardImageAltTag"
                                                         title="@cardItem.CardImageAltTag"
                                                         loading="lazy">
                                                </a>
                                        </figure>
                                        <div class="card-body d-flex flex-column">

                                            <h3 class="card-title text-semibold"><a href="@cardItem.CardLink" onclick="@cardItem.CTaonclick">@cardItem.CardTitle</a></h3>
                                            <div class="card-text text-limit">@cardItem.CardDescription</div>

                                            <a class="card-link mt-auto" 
                                                href="@cardItem.CardLink"
                                                onclick="@cardItem.CTaonclick">
                                                Read More
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                }
            }
        </div>
    </div>
</div>

<!-- Trusted By Logos -->
@Html.Partial("~/Views/Partials/TrustedByLogos.cshtml")

<!-- Serviced Offices & Coworking Location in the Philippines (Partial View)-->
@Html.Partial("~/Views/Partials/ServicedAndCoworkingLocations.cshtml")

<!--Coworking Passport Section -->
<div>
    @{
        foreach (var item in Model.Children)
        {
            if (item.Name == "Home Page - KMC Coworking Section")
            {
                var coworkingParent = (KMccoworkingParent)item;

                <div class="container-fluid" id="coworking_section_paragraph">
                    <div class="container">
                        <div class="coworking-columns">
                            <h2 class="text-semibold">@coworkingParent.CoworkingHeading</h2>
                            <div class="spacer-sm"></div>
                            @Html.Raw(coworkingParent.CoworkingDescription)
                            <div class="spacer-sm"></div>
                            <a href="/coworking-space/" class="btn btn-primary" role="button" aria-pressed="false">Read More</a>
                        </div>
                        
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12 col-12 mt-3">
                                <div class="orange-divider-2px"></div>
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container-fluid p-0" id="playButton">
                    <div class="row">
                        <div class="col-lg-9 center-items-justify .gutter-20px"
                             style="background:
                                linear-gradient( rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)),
                                url('@coworkingParent.CoworkingVideo.Url');
                                background-repeat: no-repeat;
                                background-size: cover;
                                background-position: center;
                                position: relative;
                                min-height: 400px;
                                padding: 20px;">

                            <img class="video-btn"
                                 data-src="@coworkingParent.CoworkingPlaybutton.Url"
                                 alt="@coworkingParent.CoworkingPlaybutton.Name"
                                 title="@coworkingParent.CoworkingPlaybutton.Name"
                                 loading="lazy"
                                 width="110" height="110"
                                 data-toggle="modal"
                                 data-target="#video-target" />

                            <!--Modal Code-->
                            <div class="modal fade" id="video-target" tabindex="-1" 
                                 role="dialog" aria-labelledby="video-targetCenterTitle" 
                                 aria-hidden="true">
                                <div class="modal-dialog modal-lg modal-dialog-centered"
                                     role="document">
                                    
                                    <div class="modal-content">
                                        <button type="button"
                                                class="close"
                                                id="closemodal1"
                                                data-dismiss="modal"
                                                aria-label="Close"
                                                data-video-src="@coworkingParent.VideoUrl?rel=0"
                                                style="text-align: right;">

                                            <span aria-hidden="true">&times;</span>
                                        </button>

                                        <div class="modal-body">
                                            <iframe src="@coworkingParent.VideoUrl?rel=0"
                                                    height="400"
                                                    width="100%"
                                                    id="youtube"
                                                    frameborder="0"
                                                    allow="encrypted-media"
                                                    allowfullscreen
                                                    allowscriptaccess="always"></iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 " style="position: relative; max-height: 400px;">
                            <img class="img-fluid img_object-fit w-100"
                                 data-src="@coworkingParent.CoworkingImage.Url"
                                 alt="@coworkingParent.CoworkingImageAltTag"
                                 title="@coworkingParent.CoworkingImageAltTag"
                                 loading="lazy"/>
                        </div>
                    </div>
                </div>

                <div class="container-fluid p-0" id="coworking-passport">
                    <div class="container-fluid desktop-view">
                        <div class="container">
                            <div class="row">
                                <div class="col-12 col-md-6 col-lg-6">
                                    <div class="container overlap_left"
                                         style="position: relative;
                                            height: 500px;">

                                        <img class="img-fluid img_object-fit"
                                             data-src="@coworkingParent.CoworkingPassportImage.Url"
                                             alt="@coworkingParent.CoworkingPassportImageAltTag"
                                             title="@coworkingParent.CoworkingPassportImageAltTag"
                                             loading="lazy"/>
                                    </div>
                                    <div class="overlap_border_left"></div>

                                </div>

                                <div class="col-12 col-md-6 col-lg-6 overlap_contents " id="coworking_passport">
                                    @Html.Raw(coworkingParent.CoworkingPassportHeading)
                                    <div class="orange-divider-2px"></div>
                                    @Html.Raw(coworkingParent.CoworkingPassportDescription)

                                      <a href="@coworkingParent.CoworkingPassportButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@coworkingParent.CoworkingPassportButtonText</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mobile-view">
                        <img class="img-fluid img_object-fit img img-overlap-style-mobile"
                             data-src="@coworkingParent.CoworkingPassportImage.Url"
                             alt="@coworkingParent.CoworkingPassportImageAltTag"
                             title="@coworkingParent.CoworkingPassportImageAltTag"
                             loading="lazy"/>
                        <div class="container-fluid">
                            <div class="container">
                                @Html.Raw(coworkingParent.CoworkingPassportHeading)
                                <div class="orange-divider-2px"></div>
                                @Html.Raw(coworkingParent.CoworkingPassportDescription)

                                <a href="@coworkingParent.CoworkingPassportButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@coworkingParent.CoworkingPassportButtonText</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container-fluid p-0" id="join-the-community">
                    <div class="container-fluid desktop-view">
                        <div class="container">
                            <div class="row">
                                <div class=" col-12 col-md-5 col-lg-6 overlap_contents">
                                    @Html.Raw(coworkingParent.CommunityHeading)
                                    <div class="orange-divider"></div>
                                    @Html.Raw(coworkingParent.CommunityDescription)

                                     <a href="@coworkingParent.CommunityButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@coworkingParent.CommunityButtonText</a>
                                </div>

                                <div class="col-12 col-md-7 col-lg-6">

                                    <div class="container overlap_right"
                                         style="position: relative; height: 500px;">

                                        <img class="img-fluid img_object-fit"
                                             data-src="@coworkingParent.CommunityImage.Url"
                                             alt="@coworkingParent.CommunityImageAltTag"
                                             title="@coworkingParent.CommunityImageAltTag"
                                             loading="lazy"/>
                                    </div>

                                    <div class="overlap_border_right"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mobile-view">
                        <img class="img-fluid img_object-fit img-overlap-style-mobile"
                             data-src="@coworkingParent.CommunityImage.Url"
                             alt="@coworkingParent.CommunityImageAltTag"
                             title="@coworkingParent.CommunityImageAltTag"
                             loading="lazy"/>

                        <div class="container-fluid">
                            <div class="container">
                                @Html.Raw(coworkingParent.CommunityHeading)
                                <div class="orange-divider"></div>
                                @Html.Raw(coworkingParent.CommunityDescription)

                                <a href="@coworkingParent.CommunityButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@coworkingParent.CommunityButtonText</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>

<!--Featured Banner-->
@Html.Partial("~/Views/Partials/FeaturedBanner.cshtml")

@section Scripts{
    <script defer src="~/Scripts/custom/homepagescripts.es5.min.js"></script>
}