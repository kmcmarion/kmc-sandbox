@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.CustomizedPrivateOfficeSuites>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Web
@{
    Layout = "master.cshtml";

    var selection = Model.Ancestor("home");
    var home = (Home)selection;

    string page = "Customized Private Office Suite";
}

<!--Above the Fold Column 1 and Carousel -->
<div class="container-fluid p-0" id="aboveTheFold">
    <div class="row rowHeight">
        <div class="desktop-view col-lg-7 col-md-12"
             style="background: #000 url('@Model.AboveTheFoldCol1BgImage.Url');
                                         background-repeat: repeat;
                                         background-position: center;
                                         position: relative;
                                         min-height: 250px;
                                         padding: 0 80px;
                                         color: #fff;">
            <div class="vertical-center-transform">
                @Html.Raw(Model.AboveTheFoldHeading)
                <div class="orange-divider-1px"></div>
                @Html.Raw(Model.AboveTheFoldSubHeading)
                @Html.Raw(Model.AboveTheFoldDescription)
                <a href="@Model.AboveTheFoldButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@Model.AboveTheFoldButtonText</a>
            </div>

        </div>

        <!-- Carousel -->
        <div class="col-lg-5 col-md-12 col-sm-12 col-12 owl-carousel owl-theme px-0" id="aboveTheFold_carousel">

            @{
                int count = 0;
                {
                    foreach (var city in home.Children)
                    {
                        if (city.IsDocumentType("cityItems"))
                        {
                            foreach (var building in city.Children)
                            {
                                if (building.IsDocumentType("buildings"))
                                {
                                    var featured = (Buildings)building;
                                    if (featured.AppearOnPage.Contains(page))
                                    {
                                        if (count >= 3)
                                        {
                                            break;
                                        }

                                        else
                                        {
                                            <div class="container-fluid h-100 p-0 kv-banner-100vh" 
                                                 style="color: white;">
                                                 
                                                 <img class="img-bg owl-lazy"
                                                      data-src="@featured.FeaturedPhoto.Url" />

                                                <div class="spacer-sm"></div>

                                                <div class="spaces-carousel-text" style="background-color: rgba(0,0,0,0.7);padding: 20px;">
                                                    <h4 class="text-semibold text-orange text-uppercase">
                                                        <a href="@featured.Url">@featured.FeaturedBuildingName</a>
                                                    </h4>
                                                    <h5>
                                                        <i class="fa fa-map-marker-alt" aria-hidden="true"></i>&nbsp;
                                                        @featured.FeaturedBuildingCity
                                                    </h5>
                                                    @Html.Raw(featured.BuildingAddress)
                                                    <br />
                                                    <a href="/locations/" class="viewAllLocations">View All Locations</a>
                                                    <div class="spacer-sm"></div>
                                                </div>
                                            </div>
                                            count++;
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        </div>

        <!--Title and Description On Mobile-->
        <div class="container mobile-view"
             style="background: #fff;
                        min-height: 250px;
                        padding: 30px;
                        color: #333;">

            <div>
                @Html.Raw(Model.AboveTheFoldHeading)
                <div class="orange-divider-1px"></div>
                @Html.Raw(Model.AboveTheFoldSubHeading)
                @Html.Raw(Model.AboveTheFoldDescription)
                <a href="@Model.AboveTheFoldButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@Model.AboveTheFoldButtonText</a>
            </div>
        </div>

    </div>
</div>

<!-- Customized Private Office Suites -->
<div class="container-fluid p-0" id="customized-private-office-suites">
    <div class="container-fluid desktop-view">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="container overlap_left"
                         style="position: relative;
                            height: 500px;">

                        <img class="img-fluid img_object-fit img-overlap-style"
                             data-src="@Model.CustomizedOfficeSuitesSupportingImage.Url"
                             alt="@Model.CustomizedOfficeSuitesImageAltTag"
                             title="@Model.CustomizedOfficeSuitesImageAltTag" />
                    </div>

                    <div class="overlap_border_left"></div>
                </div>

                <div class="col-12 col-lg-6 overlap_contents">
                    @Html.Raw(Model.CustomizedOfficeSuitesHeading)
                    <h3>@Model.CustomizedOfficeSuitesSubHeading</h3>
                    <div class="orange-divider-2px"></div>
                    @Html.Raw(Model.CustomizedOfficeSuitesDescription)
                </div>

            </div>
        </div>
        <div class="spacer-lg"></div>
    </div>
    
    <div class="mobile-view">
        <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
             data-src="@Model.CustomizedOfficeSuitesSupportingImage.Url"
             alt="@Model.CustomizedOfficeSuitesImageAltTag"
             title="@Model.CustomizedOfficeSuitesImageAltTag" />

        <div class="container-fluid">
            <div class="container">
                @Html.Raw(Model.CustomizedOfficeSuitesHeading)
                <h3>@Model.CustomizedOfficeSuitesSubHeading</h3>
                <div class="orange-divider-2px"></div>
                @Html.Raw(Model.CustomizedOfficeSuitesDescription)
            </div>
        </div>
    </div>

</div>

<!-- How it Works -->

<div class="container-fluid black-pattern-bg" id="howItWorks">
    <div class="container text-center">
        @Html.Raw(Model.HowItWorksHeading)

        <div class="row">
            <div class="col-lg-4 col-md-4">
                <img height="90" data-src="@Model.HowItWorksCol1Icon.Url" />
                <div class="spacer-sm"></div>
                <div class="ul-centered">@Html.Raw(Model.HowItWorksCol1TitleAndDescription)</div>
            </div>

            <div class="col-lg-4 col-md-4">
                <img height="90" data-src="@Model.HowItWorksCol2Icon.Url" />
                <div class="spacer-sm"></div>
                <div class="ul-centered">@Html.Raw(Model.HowItWorksCol2TitleAndDescription)</div>
            </div>

            <div class="col-lg-4 col-md-4">
                <img height="90" data-src="@Model.HowItWorksCol3Icon.Url" />
                <div class="spacer-sm"></div>
                <div class="ul-centered">@Html.Raw(Model.HowItWorksCol3TitleAndDescription)</div>
            </div>

        </div>
    </div>
</div>

<!-- Shared Office Access and KMC Advantage -->
<div class="container-fluid p-0">
    <div class="container-fluid desktop-view">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="container overlap_left"
                         style="position: relative;
                            height: 500px;">

                        <img class="img-fluid img_object-fit img-overlap-style"
                             data-src="@Model.SharedOfficeAndAdvantageSupportingImage.Url"
                             alt="@Model.SharedOfficeAndAdvantageImageAltTag"
                             title="@Model.SharedOfficeAndAdvantageImageAltTag" />
                    </div>

                    <div class="overlap_border_left"></div>
                </div>

                <div class="col-12 col-lg-6 overlap_contents">
                    @Html.Raw(Model.SharedOfficeHeading)
                    <div class="orange-divider-2px"></div>
                    <div class="list-items">@Html.Raw(Model.SharedOfficeDescription)</div>
                </div>

            </div>
        </div>
    </div>

    <div class="mobile-view">
        <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
             data-src="@Model.SharedOfficeAndAdvantageSupportingImage.Url"
             alt="@Model.SharedOfficeAndAdvantageImageAltTag"
             title="@Model.SharedOfficeAndAdvantageImageAltTag" />

        <div class="container-fluid">
            <div class="container">
                @Html.Raw(Model.SharedOfficeHeading)
                <div class="orange-divider-2px"></div>
                <div class="list-items">@Html.Raw(Model.SharedOfficeDescription)</div>
            </div>
        </div>
    </div>
</div>

<!--FAQ-->
@Html.Partial("~/Views/Partials/FAQSchema.cshtml")

<!--Featured Locations Partial View -->
<div class="container-fluid">
    <div class="container">
        <div class="container buildingsPerOfficeType" id="smallerOfficeHeading"
             style="background:#F99D3A url(); padding: 15px 10px 10px 10px; border-radius: 5px;">
            <div class="row">
                <div class="col">
                    <h2 class="text-white text-extrabold">Looking for Smaller or Larger Office Options?</h2>
                </div>
            </div>
        </div>
        <div class="spacer-md"></div>
    </div>

    <div class="container">
        <!--Coworking Space Offices -->
        @Html.Partial("~/Views/Partials/OfficeOptions/CoworkingSpace.cshtml")
        <div class="spacer-lg"></div>

        <!--Standard Private Offices -->
        @Html.Partial("~/Views/Partials/OfficeOptions/StandardPrivateOffices.cshtml")
        <div class="spacer-lg"></div>

        <!-- Entire Customized Floors -->
        @Html.Partial("~/Views/Partials/OfficeOptions/CustomizedOfficeFloors.cshtml")
        <div class="spacer-lg"></div>

        <div class="row" id="viewAllLocations">
            <div class="col-lg-4"></div>

            <div class="col-lg-4">
                <a href="/locations/" class="btn btn-primary" role="button" aria-disabled="true" style="font-size:0.8rem;width:100%;">View All Locations </a>
            </div>

            <div class="col-lg-4"></div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/custom/aboveTheFold_Carousel.es5.min.js"></script>
    <script>
        $('.panel-collapse').on('show.bs.collapse', function () {
            $(this).siblings('.panel-heading').addClass('active');
        });

        $('.panel-collapse').on('hide.bs.collapse', function () {
            $(this).siblings('.panel-heading').removeClass('active');
        });
    </script>
}
