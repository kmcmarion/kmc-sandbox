@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Opportunity>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
	var id = Request.QueryString["p"];
}

@if (id == null)
{
    Response.Redirect("/careers/");
}

else
{
    <div class="container-fluid">
        @{ 
            Html.RenderAction("JobDescription", "Careers", new { id = id });
        }
    </div>
}