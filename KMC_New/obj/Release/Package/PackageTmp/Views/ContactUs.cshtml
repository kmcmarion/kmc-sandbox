@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.ContactUs>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "master.cshtml";
}

<div class="container-fluid" id="contactUsHeading">
    <div class="background-style" 
        style="background: linear-gradient( rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.8)), url(@Model.HeadingBgTexture.Url)">
       
    </div>

    <div class="container-fluid" id="contactUsFloat">
        <div class="container">
            @Html.Raw(Model.Heading)
        </div>
        <div class="container" id="contactUsBox">
            <div class="row wrapper">
                <div class="col-lg-8 p-5" id="contactUsFormCol">
                    <div id="first-step">
                       <!--[if lte IE 8]>
                        <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/v2-legacy.js"></script>
                        <![endif]-->
                        <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/v2.js"></script>
                        <script>
                          hbspt.forms.create({
                        	portalId: "2867266",
                        	formId: "9fdf489a-a608-4edc-85e6-c6da203805b8",
                        	css:""
                        });
                        </script>
                        <p>By clicking the above button, you agree to our <a href="/terms-of-service/"><strong>Terms of Service</strong></a> and have read and understood our <a href="/privacy-policy"><strong>Privacy Policy</strong></a>.</p>
                    </div>
                    
                </div>

                <div class="col-lg-4 p-5" id="contactUsInfoCol" style="background: #000 url(@Model.ContactInfoBgTexture.Url)">
                    <div>
                        <h4 class="text-extrabold text-orange">Reach Us</h4>
                        @Html.Raw(Model.ReachUs)
                        <div class="spacer-sm"></div>

                        <h4 class="text-extrabold text-orange">Sales Hours</h4>
                        <p>@Html.Raw(Model.SalesHours)</p>
                        <div class="spacer-sm"></div>

                        <h4 class="text-extrabold text-orange">Mailing Address</h4>
                        <p>@Html.Raw(Model.MailingAddress)</p>
                        <div class="spacer-sm"></div>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15447.440415810996!2d121.0459622!3d14.5499915!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xff06bbdc7811df13!2sKMC%20Solutions!5e0!3m2!1sen!2sph!4v1605864532767!5m2!1sen!2sph" width="100%" height="250" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                        <div class="spacer-sm"></div>
                        
                        <h4 class="text-extrabold text-orange">Follow Us</h4>
                        <p>
                            <ul>
                                <li>
                                    <a href="https://www.facebook.com/kmcsolutionsph/" 
                                    target="_blank"
                                    onclick="gtag('event', 'click', { 'send_to': 'UA-73943338-1', 'event_category': 'kmc-socials', 'event_action': 'click', 'event_label': 'kmc-fb'});"
                                    >
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                </li>
                                
                                <li>
                                    <a href="https://www.linkedin.com/company/kmc-solutions-inc/" 
                                    target="_blank"
                                    onclick="gtag('event', 'click', { 'send_to': 'UA-73943338-1', 'event_category': 'kmc-socials', 'event_action': 'click', 'event_label': 'kmc-linkedin'});">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                </li>
                                
                                <li>
                                    <a href="https://www.instagram.com/kmcsolutions/" 
                                    target="_blank"
                                    onclick="gtag('event', 'click', { 'send_to': 'UA-73943338-1', 'event_category': 'kmc-socials', 'event_action': 'click', 'event_label': 'kmc-insta'});">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                </li>
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Emergency Contacts Modal-->
<div class="modal fade" id="emergency-contact" tabindex="-1" role="dialog" aria-labelledby="emergency-contact" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="background: #ffffff">
            <div class="modal-header" style="margin: auto">
                @Html.Raw(Model.PopupBannerTitle)
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Raw(Model.EmergencyContacts)
            </div>
        </div>
    </div>
</div>