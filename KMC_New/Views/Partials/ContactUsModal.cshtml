                            css: '',
                            onFormSubmit: function (form) {
                                //toggle next step
                                $('#first-step-modal').hide();
                                $('#second-step-modal').show();

                                var email = $('#email-6413777d-4cda-43c0-b2d6-2f179188e7c1').val();
                                console.log(email);
                                $("input[name='email']").val(email);
                                $('input[type="radio"]:checked').parent('label').addClass('active');
                                $('#officeSpace_form-modal').show();
                            }
                        });
                    </script>
