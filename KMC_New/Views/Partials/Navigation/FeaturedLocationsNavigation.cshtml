@inherits Umbraco.Web.Mvc.UmbracoViewPage

@{
    var rootItem = Model.Ancestor("home");
    var root = (Home)rootItem;
}
<div class="container-fluid" id="featured-locations-nav" 
     style="background: #f99d3a url('/media/ll0jiszy/white-diamond-dark.png')">
    
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-4 col-lg-4">
                <h2>Featured Locations</h2>
            </div>

            <div class="col-sm-12 col-md-8 col-lg-8 p-0">
                <nav class="navbar navbar-expand navbar-light">
                    
                    <div class="" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                            @foreach (var item in root.Children)
                            {
                                if (item.IsDocumentType("cityItems"))
                                {
                                    <li class="nav-item"><a class="nav-link" href="@item.Url">@item.Name</a></li>
                                }
                            }
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>