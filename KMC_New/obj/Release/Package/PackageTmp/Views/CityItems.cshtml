@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.CityItems>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Web
@{
    Layout = "master.cshtml";
    var selection = Model.Ancestor("home");
    var home = (Home)selection;
    var gtagCity = Model.NavigationItemName.ToLower();
}

<div class="container-fluid p-0" id="aboveTheFold">
    <div class="row rowHeight">
        <div class="col-lg-6 col-md-12 col-sm-12 col-12 center-items"
             style="background: #ffffff;
                    padding: 100px;">

            <div>
                @Html.Raw(Model.Heading)
                <div class="orange-divider-1px"></div>
                @Html.Raw(Model.HeadingContent)s
                <a href="@Model.ButtonLink" 
                   class="btn btn-primary" 
                   role="button" 
                   aria-pressed="false" 
                   onclick="gtag('event', 'click', {'send_to':'UA-73943338-1', 'event_category': 'kmc-cbd', 'event_action': 'click', 'event_label': '@gtagCity-inquire-now'});">@Model.ButtonText</a>
            </div>
        </div>

        <!-- Insert Carousel Here -->
        <div class="col-lg-6 col-md-12 col-sm-12 col-12 owl-carousel owl-theme w-100 px-0" id="aboveTheFold_carousel">
            
            @{
                int count_carousel = 0;
            }
            
            @{
                foreach (var item in Model.Children.OrderByDescending(x => x.UpdateDate))
                {
                    if (item.IsDocumentType("buildings"))
                    {
                        var featured = (Buildings)item;

                        if (count_carousel >= 3)
                        {
                            break;
                        }

                        if (!featured.DoNotShowInLocations) { 
                            if (featured.Value<bool>("newBuildingPreSelling"))
                            {
                                <div class="wrap-2">
                                    <span class="ribbon-2 text-extrabold">@featured.CityOverviewCarouselRibbonText</span>
                                    <div class="container-fluid h-100 p-0"
                                            style="display:inline-block;
                                                    overflow:hidden;
                                                    position: absolute; 
                                                    width: 100%;
                                                    height: 100vh;
                                                    color: #fff;">
                                                
                                        <img class="img-bg owl-lazy"
                                         data-src="@featured.CarouselPhoto.Url"/>

                                        <div class="spacer-sm"></div>

                                        <div class="spaces-carousel-text"
                                                style="background-color: rgba(0,0,0,0.7);padding: 20px;">
                                            <h4 class="text-semibold text-orange text-uppercase">
                                                <a href="@featured.Url">@featured.FeaturedBuildingName</a>
                                            </h4>
                                            <h5>
                                                <i class="fa fa-map-marker-alt" aria-hidden="true"></i>&nbsp;
                                                @featured.FeaturedBuildingCity
                                            </h5>
                                            @Html.Raw(featured.BuildingAddress)
                                            <br />
                                            <a href="/office-space-philippines/" class="viewAllLocations">View All Locations</a>
                                            <div class="spacer-sm"></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        
                            else
                            {
                                <div class="container-fluid h-100 p-0 kv-banner-100vh"
                                     style="color: white;">
                                 
                                     <img class="img-bg owl-lazy"
                                         data-src="@featured.CarouselPhoto.Url"/>

                                    <div class="spacer-sm"></div>

                                    <div class="spaces-carousel-text" 
                                         style="background-color: rgba(0,0,0,0.7);padding: 20px;">
                                        <h4 class="text-semibold text-orange text-uppercase">
                                            <a href="@featured.Url">@featured.FeaturedBuildingName</a>
                                        </h4>
                                        <h5>
                                            <i class="fa fa-map-marker-alt" aria-hidden="true"></i>&nbsp;
                                            @featured.FeaturedBuildingCity
                                        </h5>
                                        @Html.Raw(featured.BuildingAddress)
                                        <br />
                                        <a href="/office-space-philippines/" class="viewAllLocations">View All Locations</a>
                                        <div class="spacer-sm"></div>
                                    </div>
                                </div>
                            }

                            count_carousel++;
                        }
                    }
                }
            }

        </div>
    </div>
</div>


<div class="container-fluid orange-pattern-bg" id="city_pages" style="padding: 25px 0;">
    <div class="container">
        <h2 class="text-semibold text-white">@Model.AvailableLocationsHeading</h2>
    </div>
</div>


<div class="container-fluid">
    <div class="container" id="cityItemsPage">
        <div class="row">
            @{ foreach (var item in Model.Children)
                {
                    if (item.IsDocumentType("buildings"))
                    {
                        var buildingItems = (Buildings)item;
                         if (!buildingItems.DoNotShowInLocations) { 
                            if (buildingItems.Value<bool>("newBuildingPreSelling"))
                            {
                                <div class="col-lg-4 col-md-4 col-sm-12 col-12 my-1">
                                    <div class="wrap h-100">
                                        <span class="ribbon text-semibold">@buildingItems.CardRibbonText</span>
                                        <div class="card shadow bg-white rounded w-100 h-100">
                                            <div style="height: 175px;">
                                                <img class="card-img-top img_object-fit"
                                                        data-src="@buildingItems.FeaturedPhoto.Url" alt="" />
                                            </div>

                                            <div class="card-body d-flex flex-column">
                                                <h4 class="text-semibold text-orange text-uppercase">
                                                    <a href="@buildingItems.Url">@buildingItems.CarouselBuildingName</a>
                                                </h4>

                                                <div class="bldg-address">@buildingItems.CarouselBuildingAddress</div>
                                                <div class="spacer-sm"></div>

                                                <div class="bldg-amenities">@Html.Raw(buildingItems.CarouselBuildingAmenities)</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        
                            else
                            {
                                <div class="col-lg-4 col-md-4 col-sm-12 col-12 my-1">
                                    <div class="card shadow bg-white rounded w-100 h-100">
                                        <div style="height: 175px;">
                                            <img class="card-img-top img_object-fit"
                                                    data-src="@buildingItems.FeaturedPhoto.Url" alt="" />
                                        </div>

                                        <div class="card-body d-flex flex-column">
                                            <h4 class="text-semibold text-orange text-uppercase">
                                                <a href="@buildingItems.Url">@buildingItems.CarouselBuildingName</a>
                                            </h4>

                                            <div class="bldg-address">@buildingItems.CarouselBuildingAddress</div>
                                            <div class="spacer-sm"></div>

                                            <div class="bldg-amenities">@Html.Raw(buildingItems.CarouselBuildingAmenities)</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                }
            }
        </div>

        <div class="spacer-lg"></div>

        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <a href="/locations/" class="btn btn-primary" role="button" aria-disabled="true" style="font-size:0.8rem;width:100%;">
                    View All Our Locations
                </a>
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>
</div>

<div class="container-fluid desktop-view">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6">
                <div class="container overlap_left"
                     style="position: relative; height: 500px;">

                    <img class="img-fluid img_object-fit img-overlap-style"
                         data-src="@Model.SupportingImage.Url"
                         alt="@Model.SupportingImageAltTag"
                         title="@Model.SupportingImageAltTag"
                         loading="lazy" />
                </div>

                <div class="overlap_border_left"></div>

            </div>

            <div class="col-12 col-lg-6 overlap_contents">
                <div class="container">
                    @Html.Raw(Model.SubHeading)
                    <div class="orange-divider-2px"></div>
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>
        <div class="spacer-lg"></div>
    </div>
</div>

<div class="mobile-view">
    <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
         data-src="@Model.SupportingImage.Url"
         alt="@Model.SupportingImageAltTag"
         title="@Model.SupportingImageAltTag"
         loading="lazy"/>
         
    <div class="container-fluid">
        <div class="container">
            <div class="col-12 col-lg-6">
                @Html.Raw(Model.SubHeading)
                <div class="orange-divider-2px"></div>
                @Html.Raw(Model.Description)
            </div>
        </div>
    </div>
</div>

