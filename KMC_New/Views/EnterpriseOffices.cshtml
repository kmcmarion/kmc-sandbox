@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.EnterpriseOffices>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Web
@{
    Layout = "master.cshtml";
    
    var selection = Model.Ancestor("home");
    var home = (Home)selection;
}

<div id="aboveTheFold_overlapped">
    <!-- Above the Fold - Desktop View -->
    <div class="container-fluid p-0 desktop-view">
        <div class="row rowHeight">
            <div class="col-lg-6 col-sm-12 col-12"
                 style="background: #000 url('@Model.AboveTheFoldCol1BgImage.Url');
             position:relative;
             background-repeat: repeat;">

                <div class="overlapped_box center-items">
                    <div>
                        @Html.Raw(Model.AboveTheFoldHeading)
                        <div class="orange-divider-2px"></div>
                        @Html.Raw(Model.AboveTheFoldSubHeading)
                        @Html.Raw(Model.AboveTheFoldDescription)
                        <a class="btn btn-primary" role="button" href="@Model.AboveTheFoldButtonLink">@Model.AboveTheFoldButtonText</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-sm-12 col-12 p-5 aboveTheFoldImage"
                 style="background: url(@Model.AboveTheFoldCol2BgImage.Url);
                    background-position:center;
                    background-repeat: no-repeat;
                    background-size: cover;
                    min-height: 400px;">
            </div>
        </div>

    </div>

    <!--Above the Fold - Mobile View -->
    <div class="container-fluid mobile-view"
         style="background: url(@Model.AboveTheFoldCol2BgImage.Url);
            background-position:center;
            background-repeat: no-repeat;
            background-size: cover;
            min-height: 300px;">

    </div>

    <div class="container-fluid mobile-view">
        <div class="container">
            @Html.Raw(Model.AboveTheFoldHeading)
            <div class="orange-divider-2px"></div>
            @Html.Raw(Model.AboveTheFoldSubHeading)
            @Html.Raw(Model.AboveTheFoldDescription)
            <a class="btn btn-primary" role="button" href="@Model.AboveTheFoldButtonLink">@Model.AboveTheFoldButtonText</a>
        </div>
    </div>
</div>


<div class="container-fluid p-0">

    @{
        foreach (var item in home.Children)
        {
            if (item.IsDocumentType("customizedPrivateOfficeSuites"))
            {
                var officeType = (CustomizedPrivateOfficeSuites)item;

                <div class="container-fluid desktop-view" id="customizedPrivateOffices">
                    <div class="container">
                        <div class="row">
                            <div class=" col-12 col-lg-6 overlap_contents">
                                @Html.Raw(officeType.OfficeSubTypeHeading)
                                @Html.Raw(officeType.OfficeSubTypeSubHeading)
                                <div class="orange-divider"></div>
                                @Html.Raw(officeType.OfficeSubTypeDescription)
                                <a href="@officeType.Url" class="btn btn-primary" role="button" aria-pressed="false">@officeType.OfficeSubTypeButtonText</a>
                            </div>

                            <div class="col-12 col-lg-6">
                                <div class="container overlap_right"
                                     style="position: relative;
                                            height: 500px;">

                                    <img class="img-fluid img_object-fit img-overlap-style"
                                         data-src="@officeType.OfficeSubTypeSupportingImage.Url"
                                         alt="@officeType.OfficeSubTypeImageAltTag"
                                         title="@officeType.OfficeSubTypeImageAltTag" />
                                </div>

                                <div class="overlap_border_right"></div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="mobile-view">
                    <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
                         data-src="@officeType.OfficeSubTypeSupportingImage.Url"
                         alt="@officeType.OfficeSubTypeImageAltTag"
                         title="@officeType.OfficeSubTypeImageAltTag" />

                    <div class="container-fluid">
                        <div class="container">
                            @Html.Raw(officeType.OfficeSubTypeHeading)
                            @Html.Raw(officeType.OfficeSubTypeSubHeading)
                            <div class="orange-divider"></div>
                            @Html.Raw(officeType.OfficeSubTypeDescription)
                            <a href="@officeType.Url" class="btn btn-primary" role="button" aria-pressed="false">@officeType.OfficeSubTypeButtonText</a>
                        </div>
                    </div>
                </div>

            }
        }
    }


    <!--Customized Office Floors-->
    @{
        foreach (var item in home.Children)
        {
            if (item.IsDocumentType("customizedOfficeFloors"))
            {
                var officeType = (CustomizedOfficeFloors)item;

                <div class="container-fluid desktop-view" id="customizedOfficeFloors">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-lg-6">
                                <div class="container overlap_left"
                                     style="position: relative; height: 500px;">

                                    <img class="img-fluid img_object-fit img-overlap-style"
                                         data-src="@officeType.OfficeSubTypeSupportingImage.Url"
                                         alt="@officeType.OfficeSubTypeImageAltTag"
                                         title="@officeType.OfficeSubTypeImageAltTag" />
                                </div>

                                <div class="overlap_border_left"></div>
                            </div>

                            <div class="col-12 col-lg-6 overlap_contents">
                                @Html.Raw(officeType.OfficeSubTypeHeading)
                                @Html.Raw(officeType.OfficeSubTypeSubHeading)
                                <div class="orange-divider"></div>
                                @Html.Raw(officeType.OfficeSubTypeDescription)
                                <a href="@officeType.Url" class="btn btn-primary" role="button" aria-pressed="false">@officeType.OfficeSubTypeButtonText</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mobile-view">
                    <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
                         data-src="@officeType.OfficeSubTypeSupportingImage.Url"
                         alt="@officeType.OfficeSubTypeImageAltTag"
                         title="@officeType.OfficeSubTypeImageAltTag" />

                    <div class="container-fluid">
                        <div class="container">
                            @Html.Raw(officeType.OfficeSubTypeHeading)
                            @Html.Raw(officeType.OfficeSubTypeSubHeading)
                            <div class="orange-divider"></div>
                            @Html.Raw(officeType.OfficeSubTypeDescription)
                            <a href="@officeType.Url" class="btn btn-primary" role="button" aria-pressed="false">@officeType.OfficeSubTypeButtonText</a>
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>


<!-- Customized Office Solutions -->
<div class="container-fluid bg_orangeAndTexture" id="customized-office"
     style="background-image: url('@Model.CustomizedOfficeBgImage.Url');
         ">
    <div class="container">
        @Html.Raw(Model.CustomizedOfficeHeading)
        <div class="spacer-md"></div>
        @Html.Partial("~/Views/Partials/CustomizedOfficeSolutionsCard-Partial.cshtml")
    </div>

</div>

<!-- KMC Advantage -->
<div class="container-fluid p-0" id="kmc_advantage">
    <div class="container-fluid desktop-view">
        <div class="container pb-5">
            <div class="row">
                <div class=" col-12 col-lg-6 overlap_contents">
                    @Html.Raw(Model.AdvantageHeading)
                    <div class="orange-divider"></div>
                    @Html.Raw(Model.AdvantageContents)
                </div>

                <div class="col-12 col-lg-6">
                    <div class="container center-items overlap_right"
                         style="position: relative;
                            height: 500px;">

                        <img class="img-fluid img_object-fit img-overlap-style"
                             data-src="@Model.AdvantageSupportingImage.Url"
                             alt="@Model.AdvantageImageAltTag"
                             title="@Model.AdvantageImageAltTag" />
                    </div>

                    <div class="overlap_border_right"></div>
                </div>

            </div>
        </div>
    </div>

    <div class="mobile-view">
        <div class="container-fluid">
            <div class="container">
                @Html.Raw(Model.AdvantageHeading)
                <div class="orange-divider"></div>
                @Html.Raw(Model.AdvantageContents)
            </div>
        </div>
        
        <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
             data-src="@Model.AdvantageSupportingImage.Url"
             alt="@Model.AdvantageImageAltTag"
             title="@Model.AdvantageImageAltTag" />
    </div>
</div>

<!--FAQ-->
@Html.Partial("~/Views/Partials/FAQSchema.cshtml")

<div class="container-fluid">
    <div class="container">
        <div class="container buildingsPerOfficeType" id="smallerOfficeHeading"
             style="background:#F99D3A url(); padding: 15px 10px 10px 10px; border-radius: 5px;">
            <div class="row">
                <div class="col">
                    <h2 class="text-white">Looking for Smaller Office Options?</h2>
                </div>
            </div>
        </div>
        <div class="spacer-md"></div>
    </div>

    <div class="container">
        <!--Coworking Space Offices -->
        @Html.Partial("~/Views/Partials/OfficeOptions/CoworkingSpace.cshtml")
        <div class="spacer-lg"></div>

        <!--Standard Private Offices -->
        @Html.Partial("~/Views/Partials/OfficeOptions/StandardPrivateOffices.cshtml")
        <div class="spacer-lg"></div>

        <div class="row" id="viewAllLocations">
            <div class="col-lg-4"></div>

            <div class="col-lg-4">
                <a href="/locations/" class="btn btn-primary" role="button" aria-disabled="true" style="font-size:0.8rem;width:100%;">View All Locations </a>
            </div>

            <div class="col-lg-4"></div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('.panel-collapse').on('show.bs.collapse', function () {
            $(this).siblings('.panel-heading').addClass('active');
        });

        $('.panel-collapse').on('hide.bs.collapse', function () {
            $(this).siblings('.panel-heading').removeClass('active');
        });
    </script>
}