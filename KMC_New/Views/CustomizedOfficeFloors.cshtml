                    <div class="orange-divider"></div>
                    @Html.Raw(Model.BrandedOfficeDescription)
                </div>
            </div>
        </div>
    </div>
    
    <div class="mobile-view">
        <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
             data-src="@Model.BrandedOfficeSupportingImage.Url"
             alt="@Model.BrandedOfficeSupportingImageAltTag"
