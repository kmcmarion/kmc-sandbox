<div class="container-fluid p-0" id="virtual-and-events">

    @{
        <!--Virtual Offices -->
        foreach (var item in home.Children)
        {
            if (item.IsDocumentType("virtualOffices"))
            {
                var officeType = (VirtualOffices)item;

                <!--Desktop-->
                <div class="container-fluid desktop-view">
                    <div class="spacer-lg"></div>
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-lg-6">
                                <div class="container overlap_left"
                                     style="position: relative;
                                            height: 500px;">

                                    <img class="img-fluid img_object-fit img-overlap-style"
                                         data-src="@officeType.OfficeSubTypeSupportingImage.Url"
                                         alt="@officeType.OfficeSubTypeImageAltTag"
                                         title="@officeType.OfficeSubTypeImageAltTag" />
                                </div>

                                <div class="overlap_border_left"></div>
                            </div>

                            <div class="col-12 col-lg-6 overlap_contents">
                                @Html.Raw(officeType.OfficeSubTypeHeading)
                                <h2 class="text-semibold">@officeType.OfficeSubTypeSubHeading</h2>
                                <div class="orange-divider"></div>
                                @Html.Raw(officeType.OfficeSubTypeDescription)
                                <a href="@officeType.Url" class="btn btn-primary" role="button" aria-pressed="false">@officeType.OfficeSubTypeButtonText</a>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Mobile -->

                <div class="mobile-view">
                    <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
                         data-src="@officeType.OfficeSubTypeSupportingImage.Url"
                         alt="@officeType.OfficeSubTypeImageAltTag"
                         title="@officeType.OfficeSubTypeImageAltTag" />
                    <div class="container-fluid">
                        <div class="container">
                            <div class="col-12 col-lg-6">
                                @Html.Raw(officeType.OfficeSubTypeHeading)
                                @Html.Raw(officeType.OfficeSubTypeSubHeading)
                                <div class="orange-divider"></div>
                                @Html.Raw(officeType.OfficeSubTypeDescription)
                                <a href="@officeType.Url" class="btn btn-primary" role="button" aria-pressed="false">@officeType.OfficeSubTypeButtonText</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }

    <div>
        @{
            <!--Community & Event Spaces -->
            foreach (var item in home.Children)
            {
                if (item.IsDocumentType("communityEventSpaces"))
                {
                    var officeType = (CommunityEventSpaces)item;
                    <!--Desktop-->
                    <div class="container-fluid desktop-view">
                        <div class="container">
                            <div class="row">
                                <div class=" col-12 col-lg-6 overlap_contents">
                                    <h2 class="text-semibold">@officeType.Heading</h2>
                                    <div class="orange-divider"></div>
                                    @Html.Raw(officeType.Description)
                                    <a href="@officeType.Url" class="btn btn-primary" role="button" aria-pressed="false">@officeType.ButtonText</a>
                                </div>


                                <div class="col-12 col-lg-6">

                                    <div class="container overlap_right"
                                         style="position: relative; height: 500px;">

                                        <img class="img-fluid img_object-fit img-overlap-style"
                                             data-src="@officeType.BgImage.Url"
                                             alt="@officeType.BgImageAltTag"
                                             title="@officeType.BgImageAltTag" />
                                    </div>

                                    <div class="overlap_border_right"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mobile -->

                    <div class="mobile-view">
                        <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
                             data-src="@officeType.BgImage.Url"
                             alt=""
                             title="" />
                        <div class="container-fluid">
                            <div class="container">
                                <div class="col-12 col-lg-6">
                                    <h2 class="text-semibold">@officeType.Heading</h2>
                                    <div class="orange-divider"></div>
                                    @Html.Raw(officeType.Description)
                                    <a href="@officeType.Url" class="btn btn-primary" role="button" aria-pressed="false">@officeType.ButtonText</a>
