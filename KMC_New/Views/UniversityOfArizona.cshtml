    <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 600px;">
        <div class="modal-content" style="background:#F8F8F8; padding: 30px;">
            <div class="modal-header text-center" style="border-bottom: none;">
                <h3 class="modal-title text-extrabold mx-auto">Register Now</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="form_b07d6040-40df-4af2-9713-c0c52f753a96">Loading...</div>
                <script>
                /*<![CDATA[*/var script = document.createElement('script'); script.async = 1; script.src = 'https://slate.grad.arizona.edu/register/?id=b07d6040-40df-4af2-9713-c0c52f753a96&output=embed&div=form_b07d6040-40df-4af2-9713-c0c52f753a96' + ((location.search.length > 1) ? '&' + location.search.substring(1) : ''); var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(script, s);/*]]>*/
                </script>
            </div>           
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}