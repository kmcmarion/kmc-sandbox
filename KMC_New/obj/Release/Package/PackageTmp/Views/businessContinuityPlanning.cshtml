@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.BusinessContinuityPlanning>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
}

<div id="aboveTheFold_overlapped">
    <!-- Above the Fold - Desktop View -->
    <div class="container-fluid p-0 desktop-view">
        <div class="row rowHeight">
            <div class="col-lg-6 col-sm-12 col-12"
                 style="background: #000 url('@Model.AboveTheFoldCol1BgImage.Url');
                         position:relative;
                         background-repeat: repeat;">

                <div class="overlapped_box center-items">
                    <div>
                        @Html.Raw(Model.AboveTheFoldHeading)
                        <div class="orange-divider-2px"></div>
                        @Html.Raw(Model.AboveTheFoldSubHeading)
                        @Html.Raw(Model.AboveTheFoldDescription)
                        <a href="@Model.AboveTheFoldButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@Model.AboveTheFoldButtonText</a>

                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-sm-12 col-12 p-5 aboveTheFoldImage"
                 style="background: url(@Model.AboveTheFoldCol2BgImage.Url);
                    background-position:center;
                    background-repeat: no-repeat;
                    background-size: cover;
                    min-height: 400px;">
            </div>
        </div>

    </div>

    <!--Above the Fold - Mobile View -->
    <div class="container-fluid mobile-view"
         style="background: url(@Model.AboveTheFoldCol2BgImage.Url);
            background-position:center;
            background-repeat: no-repeat;
            background-size: cover;
            min-height: 300px;">

    </div>

    <div class="container-fluid mobile-view">
        <div class="container">
            @Html.Raw(Model.AboveTheFoldHeading)
            <div class="orange-divider-2px"></div>
            @Html.Raw(Model.AboveTheFoldSubHeading)
            @Html.Raw(Model.AboveTheFoldDescription)
            <a href="@Model.AboveTheFoldButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@Model.AboveTheFoldButtonText</a>
        </div>
    </div>
</div>

<div class="container-fluid p-0">
    <div class="container-fluid desktop-view" id="disaster-recovery">
        <div class="container">
            <div class="row">
                <div class=" col-12 col-lg-6 overlap_contents">
                    @Html.Raw(Model.DisasterRecoveryHeading)
                    <div class="orange-divider"></div>
                    @Html.Raw(Model.DisasterRecoveryContents)
                </div>

                <div class="col-12 col-lg-6">
                    <div class="container overlap_right"
                         style="position: relative;
                                height: 500px;">

                        <img class="img-fluid img_object-fit img-overlap-style"
                             data-src="@Model.DisasterRecoverySupportingImage.Url"
                             alt="@Model.DisasterRecoveryImageAltTag"
                             title="@Model.DisasterRecoveryImageAltTag" />
                    </div>
                    <div class="overlap_border_right"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="mobile-view">
        <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
             src="@Model.DisasterRecoverySupportingImage.Url"
             alt="@Model.DisasterRecoveryImageAltTag"
             title="@Model.DisasterRecoveryImageAltTag" />

        <div class="container-fluid">
            <div class="container">
                @Html.Raw(Model.DisasterRecoveryHeading)
                <div class="orange-divider"></div>
                @Html.Raw(Model.DisasterRecoveryContents)
            </div>
        </div>
    </div>

    <!--Swing Space and Data Recovery-->
    <div class="container-fluid desktop-view" id="swing-space">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="container overlap_left"
                         style="position: relative;
                                height: 500px;">

                        <img class="img-fluid img_object-fit img-overlap-style"
                             data-src="@Model.SwingSpaceSupportingImage.Url"
                             alt="@Model.SwingSpaceImageAltTag"
                             title="@Model.SwingSpaceImageAltTag" />
                    </div>

                    <div class="overlap_border_left"></div>
                </div>

                <div class="col-12 col-lg-6 overlap_contents">
                    @Html.Raw(Model.SwingSpaceHeading)
                    <div class="orange-divider"></div>
                    @Html.Raw(Model.SwingSpaceContents)
                </div>
            </div>
        </div>
    </div>

    <div class="mobile-view">
        <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
             data-src="@Model.SwingSpaceSupportingImage.Url"
             alt="@Model.SwingSpaceImageAltTag"
             title="@Model.SwingSpaceImageAltTag" />

        <div class="container-fluid">
            <div class="container">
                @Html.Raw(Model.SwingSpaceHeading)
                <div class="orange-divider"></div>
                @Html.Raw(Model.SwingSpaceContents)
            </div>
        </div>
    </div>
</div>

<div class="container-fluid" id="bcp-service-offering">
    <div class="container">
        <h3 class="extra-bold">BCP Service Offering</h3>
        <div class="orange-divider-2px"></div>
       
       <table class="bcp-table">
            <thead>
                <tr>
                    <th scope="col">Service Description</th>
                    <th scope="col">Dedicated</th>
                    <th scope="col">Dark Room</th>
                    <th scope="col">Dynamic</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td data-label="Service Description">24/7 Access</td>
                    <td data-label="Dedicated"><i class="fas fa-check"></i></td>
                    <td data-label="Dark Room">-</td>
                    <td data-label="Dynamic">-</td>
                </tr>

                <tr>
                    <td data-label="Service Description">Available only for Disaster Recovery (DR)</td>
                    <td data-label="Dedicated">-</td>
                    <td data-label="Dark Room"><i class="fas fa-check"></i></td>
                    <td data-label="Dynamic"><i class="fas fa-check"></i></td>
                </tr>

                <tr>
                    <td data-label="Service Description">Location identified based on inventory</td>
                    <td data-label="Dedicated">-</td>
                    <td data-label="Dark Room">-</td>
                    <td data-label="Dynamic"><i class="fas fa-check"></i></td>
                </tr>

                <tr>
                    <td data-label="Service Description">8-hr Meeting Room use/month</td>
                    <td data-label="Dedicated"><i class="fas fa-check"></i></td>
                    <td data-label="Dark Room"><i class="fas fa-check"></i></td>
                    <td data-label="Dynamic">-</td>
                </tr>

                <tr>
                    <td data-label="Service Description">20 days free accrued within 10 months</td>
                    <td data-label="Dedicated">-</td>
                    <td data-label="Dark Room">-</td>
                    <td data-label="Dynamic"><i class="fas fa-check"></i></td>
                </tr>

                <tr>
                    <td data-label="Service Description">Client chosen location</td>
                    <td data-label="Dedicated"><i class="fas fa-check"></i></td>
                    <td data-label="Dark Room"><i class="fas fa-check"></i></td>
                    <td data-label="Dynamic">-</td>
                </tr>

                <tr>
                    <td data-label="Service Description">Dark Space</td>
                    <td data-label="Dedicated">-</td>
                    <td data-label="Dark Room"><i class="fas fa-check"></i></td>
                    <td data-label="Dynamic">-</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!--FAQ-->
@Html.Partial("~/Views/Partials/FAQSchema.cshtml")

<div class="container-fluid orange-pattern-bg">
    <div class="container">
        @Html.Raw(Model.AddOnServicesHeading)
        <div class="white-divider-2px"></div>
        @Html.Raw(Model.AddOnContents)

        <div class="row text-center">
            <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                <img class="img-fluid"
                     data-src="@Model.AddOnIcon1.Url"
                     alt="@Model.AddOnIcon1Title"
                     title="@Model.AddOnIcon1Title" />
                <div class="spacer-sm"></div>
                <h4>@Model.AddOnIcon1Title</h4>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                <img class="img-fluid"
                     data-src="@Model.AddOnIcon2.Url"
                     alt="@Model.AddOnIcon2Title"
                     title="@Model.AddOnIcon2Title" />
                <div class="spacer-sm"></div>
                <h4>@Model.AddOnIcon2Title</h4>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                <img class="img-fluid"
                     data-src="@Model.AddOnIcon3.Url"
                     alt="@Model.AddOnIcon3Title"
                     title="@Model.AddOnIcon3Title" />
                <div class="spacer-sm"></div>
                <h4>@Model.AddOnIcon3Title</h4>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                <img class="img-fluid"
                     data-src="@Model.AddOnIcon4.Url"
                     alt="@Model.AddOnIcon4Title"
                     title="@Model.AddOnIcon4Title" />
                <div class="spacer-sm"></div>
                <h4>@Model.AddOnIcon4Title</h4>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('.panel-collapse').on('show.bs.collapse', function () {
            $(this).siblings('.panel-heading').addClass('active');
        });

        $('.panel-collapse').on('hide.bs.collapse', function () {
            $(this).siblings('.panel-heading').removeClass('active');
        });
    </script>
}