@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.UniversityOfArizona>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
	int cards_count = 0;
}

<div id="aboveTheFold_overlapped">
    <!-- Above the Fold - Desktop View -->
    <div class="container-fluid p-0 desktop-view">
        <div class="row rowHeight">
            <div class="col-lg-6 col-md-6 col-sm-12 col-12"
                 style="background: #000 url('@Model.AboveTheFoldCol1BgImage.Url');
                        position:relative;
                        background-repeat: repeat;">

                <div class="overlapped_box center-items">
                    <div>
                        @Html.Raw(Model.AboveTheFoldHeading)
                        <div class="orange-divider-2px"></div>
                        @Html.Raw(Model.AboveTheFoldSubHeading)
                        @Html.Raw(Model.AboveTheFoldDescription)
                        @if (Model.AboveTheFoldButtonLink != "" && Model.AboveTheFoldButtonText != "")
                        {
                            <div class="spacer-sm"></div>
                            <a class="btn btn-primary" role="button" href="@Model.AboveTheFoldButtonLink">@Model.AboveTheFoldButtonText</a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-sm-12 col-12 p-5 aboveTheFoldImage"
                 style="background: url(@Model.AboveTheFoldCol2BgImage.Url);
                    background-position:center;
                    background-repeat: no-repeat;
                    background-size: cover;
                    min-height: 400px;">
            </div>
        </div>
    </div>

    <!--Above the Fold - Mobile View -->
    <div class="container-fluid mobile-view"
         style="background: url(@Model.AboveTheFoldCol2BgImage.Url);
            background-position:center;
            background-repeat: no-repeat;
            background-size: cover;
            min-height: 300px;">

    </div>

    <div class="container-fluid mobile-view">
        <div class="overlapped_box">
            <div class="">
                @Html.Raw(Model.AboveTheFoldHeading)
                <div class="orange-divider-2px"></div>
                @Html.Raw(Model.AboveTheFoldSubHeading)
                @Html.Raw(Model.AboveTheFoldDescription)
                @if (Model.AboveTheFoldButtonLink != "" && Model.AboveTheFoldButtonText != "")
                {
                    <div class="spacer-sm"></div>
                    <a class="btn btn-primary" role="button" href="@Model.AboveTheFoldButtonLink">@Model.AboveTheFoldButtonText</a>
                }
            </div>
        </div>
    </div>
</div>

<div class="container-fluid p-0">
    <div class="container-fluid desktop-view">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="container overlap_left"
                         style="position: relative;
                                height: 500px;">

                        <img class="img-fluid img_object-fit img-overlap-style"
                             src="@Model.LeftSupportingImage.Url"
                             alt="@Model.LeftSupportingImageAltTag"
                             title="@Model.LeftSupportingImageAltTag" />
                    </div>
                    <div class="overlap_border_left"></div>
                </div>

                <div class="col-12 col-lg-6 overlap_contents">
                    @Html.Raw(Model.RightHeading)
                    @Model.RightSubHeading
                    <div class="orange-divider"></div>
                    @Html.Raw(Model.RightDescription)
                    @if (Model.RightButtonLink != "" && Model.RightButtonText != "")
                    {
                        <div class="spacer-sm"></div>
                        <a href="@Model.RightButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@Model.RightButtonText</a>
                    }
                </div>

            </div>
        </div>
    </div>

    <div class="mobile-view">
        <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
             src="@Model.LeftSupportingImage.Url"
             alt="@Model.LeftSupportingImageAltTag"
             title="@Model.LeftSupportingImageAltTag" />

        <div class="container-fluid">
            <div class="container">
                @Html.Raw(Model.RightHeading)
                @Model.RightSubHeading
                <div class="orange-divider"></div>
                @Html.Raw(Model.RightDescription)
                @if (Model.RightButtonLink != "" && Model.RightButtonText != "")
                {
                    <div class="spacer-sm"></div>
                    <a href="@Model.RightButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@Model.RightButtonText</a>
                }
            </div>
        </div>
    </div>

    <!--Section 2-->
    <div class="container-fluid desktop-view">
        <div class="container">
            <div class="row">
                <div class=" col-12 col-lg-6 overlap_contents">
                    @Html.Raw(Model.LeftHeading)
                    @Model.LeftSubHeading
                    <div class="orange-divider"></div>
                    @Html.Raw(Model.LeftDescription)
                    @if (Model.LeftButtonText != "")
                    {
                        <div class="spacer-sm"></div>
                        <button type="button" 
                                class="btn btn-primary" 
                                data-toggle="modal" 
                                data-target="#ua-form"
                                onclick="gtag('event', 'click', {'send_to':'UA-73943338-1', 'event_category': 'university-of-arizona', 'event_action': 'click', 'event_label': 'register-now-button'});">
                            @Model.LeftButtonText
                        </button>
                    }
                </div>

                <div class="col-12 col-lg-6">

                    <div class="container overlap_right"
                         style="position: relative;
                                            height: 500px;">

                        <img class="img-fluid img_object-fit img-overlap-style"
                             src="@Model.RightSupportingImage.Url"
                             alt="@Model.RightSupportingImageAltTag"
                             title="@Model.RightSupportingImageAltTag" />
                    </div>

                    <div class="overlap_border_right"></div>
                </div>

            </div>
        </div>
    </div>

    <div class="mobile-view">
        <img class="img-fluid img_object-fit-mobile img-overlap-style-mobile"
             src="@Model.RightSupportingImage.Url"
             alt="@Model.RightSupportingImageAltTag"
             title="@Model.RightSupportingImageAltTag" />

        <div class="container-fluid">
            <div class="container">
                @Html.Raw(Model.LeftHeading)
                @Model.LeftSubHeading
                <div class="orange-divider"></div>
                @Html.Raw(Model.LeftDescription)
                @if (Model.LeftButtonText != "")
                {
                    <div class="spacer-sm"></div>
                    <button type="button" 
                            class="btn btn-primary" 
                            data-toggle="modal" 
                            data-target="#ua-form"
                            onclick="gtag('event', 'click', {'send_to':'UA-73943338-1', 'event_category': 'university-of-arizona', 'event_action': 'click', 'event_label': 'register-now-button'});">
                        @Model.LeftButtonText
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<!--Online Program Rates-->
<div class="container-fluid pt-0">
    <div class="container">
        @Html.Raw(Model.RatesHeading)
        <div class="spacer-md"></div>
        <div class="row row-width-75">
            <div class="col-lg-6 col-md-6 col-sm-12 col-12 d-flex align-items-stretch">
                <div class="card w-100 shadow mb-3 bg-white p-4 rounded-0">
                    <div class="card-header text-center bg-white p-0">
                        <h3 class="text-uppercase">@Model.Card1Title</h3>
                    </div>
                    <div class="spacer-sm"></div>
                    <div class="card-body mx-auto pb-0">
                        <p class="mb-0 text-semibold text-center text-muted">From $500</p>
                        <p class="text-semibold text-orange">
                            <span class="text-extrabold" style="font-size: 2.5rem;">
                                @Model.Card1Price
                            </span>
                            per credit
                        </p>
                    </div>
                    <div class="card-body text-center pt-0 pb-0">                      
                        @Html.Raw(Model.Card1Inclusion)
                    </div>
                    <div class="spacer-sm"></div>
                    <button type="button"
                            class="btn btn-primary w-100 rounded-0 mt-auto"
                            data-toggle="modal"
                            data-target="#ua-form"
                            onclick="gtag('event', 'click', {'send_to':'UA-73943338-1', 'event_category': 'university-of-arizona', 'event_action': 'click', 'event_label': 'register-now-button'});">
                        Get Now
                    </button>
                </div>
            </div>

            <div class="col-lg-6 col-md-6 col-sm-12 col-12 d-flex align-items-stretch">
                <div class="card w-100 shadow mb-3 bg-white p-4 rounded-0">
                    <div class="card-header text-center bg-white p-0">
                        <h3 class="text-uppercase">@Model.Card2Title</h3>
                    </div>
                    <div class="spacer-sm"></div>
                    <div class="card-body mx-auto pb-0">
                        <div class="spacer-sm"></div>
                        <p class="text-orange text-semibold">
                            <span class="text-extrabold" style="font-size: 2.5rem;">
                                @Model.Card2Price
                            </span>
                            per credit
                        </p>
                    </div>
                    <div class="card-body text-center pt-0 pb-0">
                        @Html.Raw(Model.Card2Inclusion)
                    </div>
                    <div class="spacer-sm"></div>
                    <button type="button"
                            class="btn btn-primary w-100 rounded-0 mt-auto"
                            data-toggle="modal"
                            data-target="#ua-form"
                            onclick="gtag('event', 'click', {'send_to':'UA-73943338-1', 'event_category': 'university-of-arizona', 'event_action': 'click', 'event_label': 'register-now-button'});">
                        Get Now
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Orange Patterned Bg for Online Courses Section-->
<div class="container-fluid orange-pattern-bg">
    <div class="container">
        @Model.OnlineCoursesHeading
    </div>
</div>
<div class="container-fluid">
    <div class="container">
        @Model.OnlineCoursesDescription
        <div class="spacer-sm"></div>
        <div class="row">

            @{
                foreach (var item in Model.Children)
                {
                    if (item.IsDocumentType("universityOfArizonaCoursesList"))
                    {
                        foreach (var courses in item.Children)
                        {
                            if (courses.IsDocumentType("universityOfArizonaCourses"))
                            {
                                var cardItem = (UniversityOfArizonaCourses)courses;
                                if (cards_count >= 6)
                                {
                                    break;
                                }
                                else
                                {
                                    <div class="col-lg-4 col-md-4 col-sm-12 col-12 d-flex align-items-stretch mb-5 card-item">
                                        <div class="mb3">
                                            <div class="card-img-style mb-4">
                                                <a href="@cardItem.Url">
                                                    <img class="img-fluid"
                                                         style="width:100%; height: 100%; object-fit: cover"
                                                         data-src="@cardItem.CardImage.Url"
                                                         alt="@cardItem.CardImage.Name">
                                                </a>
                                            </div>
                                            <a href="@cardItem.Url">
                                                <h3 class="text-semibold text-orange text-uppercase">@cardItem.CourseTitle</h3>
                                            </a>
                                            <div class="text-limit">@cardItem.CardShortDescription</div>

                                            <a class="btn btn-secondary" href="@cardItem.Url">Learn More</a>
                                        </div>
                                    </div>
                                    cards_count++;
                                }
                            }
                        }

                    }
                }
            }
        </div>
        <div class="text-center">
            <a href="@Model.ViewAllButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@Model.ViewAllButtonLabel</a>
        </div>
    </div>
</div>
<!-- Modal -->
