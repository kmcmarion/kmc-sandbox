@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.CustomizedOfficeFloors>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Web

@{
    Layout = "master.cshtml";

    var selection = Model.Ancestor("home");
    var home = (Home)selection;
    string page = "Customized Office Floor";
}

<!--Above the Fold Column 1 and Carousel -->
<div class="container-fluid p-0" id="aboveTheFold">
    <div class="row rowHeight">
        <div class="desktop-view col-lg-7 col-md-12"
             style="background: #000 url('@Model.AboveTheFoldCol1BgImage.Url');
                                         background-repeat: repeat;
                                         background-position: center;
                                         position: relative;
                                         min-height: 250px;
                                         padding: 0 80px;
                                         color: #fff;">
            <div class="vertical-center-transform">
                @Html.Raw(Model.AboveTheFoldHeading)
                <div class="orange-divider-1px"></div>
                @Html.Raw(Model.AboveTheFoldSubHeading)
                @Html.Raw(Model.AboveTheFoldDescription)
                <a href="@Model.AboveTheFoldButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@Model.AboveTheFoldButtonText</a>
            </div>
        </div>

        <!-- Carousel -->
        <div class="col-lg-5 col-md-12 col-sm-12 col-12 owl-carousel owl-theme px-0" id="aboveTheFold_carousel">

            @{
                int count = 0;
                {
                    foreach (var city in home.Children)
                    {
                        if (city.IsDocumentType("cityItems"))
                        {
                            foreach (var building in city.Children)
                            {
                                if (building.IsDocumentType("buildings"))
                                {
                                    var featured = (Buildings)building;
                                    if (featured.AppearOnPage.Contains(page))
                                    {
                                        if (count >= 3)
                                        {
                                            break;
                                        }

                                        else
                                        {
                                            <div class="container-fluid h-100 p-0 kv-banner-100vh" 
                                                        style="color: white;">
                                                
                                                <img class="img-bg owl-lazy"
                                                     data-src="@featured.FeaturedPhoto.Url" />

                                                <div class="spacer-sm"></div>

                                                <div class="spaces-carousel-text" style="background-color: rgba(0,0,0,0.7);padding: 20px;">
                                                    <h4 class="text-semibold text-orange text-uppercase">
                                                        <a href="@featured.Url">@featured.FeaturedBuildingName</a>
                                                    </h4>
                                                    <h5>
                                                        <i class="fa fa-map-marker-alt" aria-hidden="true"></i>&nbsp;
                                                        @featured.FeaturedBuildingCity
                                                    </h5>
                                                    @Html.Raw(featured.BuildingAddress)
                                                    <br />
                                                    <a href="/locations/" class="viewAllLocations">View All Locations</a>
                                                    <div class="spacer-sm"></div>
                                                </div>
                                            </div>
                                            count++;
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        </div>

        <!--Title and Description On Mobile-->
        <div class="container mobile-view"
             style="background: #fff;
                        min-height: 250px;
                        padding: 30px;
                        color: #333;">

            <div>
                @Html.Raw(Model.AboveTheFoldHeading)
                <div class="orange-divider-1px"></div>
                @Html.Raw(Model.AboveTheFoldSubHeading)
                @Html.Raw(Model.AboveTheFoldDescription)
                <a href="@Model.AboveTheFoldButtonLink" class="btn btn-primary" role="button" aria-pressed="false">@Model.AboveTheFoldButtonText</a>
            </div>
        </div>

    </div>
</div>

<!-- Customized Office Solutions -->
<div class="container-fluid p-0" id="customized-office"
     style="background: #F99D3A url('@Model.CustomizedOfficeSolutionsBgImage.Url');
             background-repeat: repeat;
             background-position: center;
             position: relative;">

    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12 col-12 m-auto">
                    @Html.Raw(Model.CustomizedOfficeSolutionsHeading)
                </div>

                <div class="col-lg-3 col-md-12 col-sm-12 col-12 my-2">
                    <div class="card h-100 w-100 p-2 m-auto">
                        <div class="card-body d-flex flex-column">
                            <img class="center-element" data-src="@Model.CustomizedOfficeFloorIcon.Url" width="70" />
                            <div class="spacer-sm"></div>
                            <h3 class="card-title text-center text-orange">@Model.CustomizedOfficeFloorHeading</h3>
                            <div class="card-text">@Html.Raw(Model.CustomizedOfficeFloorDetails)</div>
                            <div class="text-center mt-auto">
                                <a href="@Model.CustomizedOfficeFloorsButtonLink"
                                   class="btn btn-primary mt-auto">@Model.CustomizedOfficeFloorsButtonText</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-12 col-sm-12 col-12 my-2">
                    <div class="card h-100 w-100 p-2 m-auto">
                        <div class="card-body d-flex flex-column">
                            <img class="center-element" 
                                data-src="@Model.YourOfficeFloorIcon.Url" width="70" />
                            <div class="spacer-sm"></div>
                            <h3 class="card-title text-center text-orange">@Model.YourOfficeFloorHeading</h3>
                            <div class="card-text">@Html.Raw(Model.YourOfficeFloorDetails)</div>
                            <div class="text-center mt-auto">
                                <a href="@Model.YourOfficeFloorButtonLink"
                                   class="btn btn-primary mt-auto">@Model.YourOfficeFloorButtonText</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

