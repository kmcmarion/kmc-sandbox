@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.CardsList>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
	var rootItem = Model.Ancestor("home");
	var root = (Home)rootItem;
}

<div class="container-fluid orange-pattern-bg" id="coworking-locations-nav">
	<div class="container">
		<div class="row">
			<div class="col-lg-3 col-md-3 col-sm-12 col-12">
				<h3 class="featured-6-heading text-extrabold" id="featured-nav-title">Coworking Spaces</h3>
			</div>

			<div class="col-lg-9 col-md-9 col-sm-12 col-12">
				<ul id="featured-locations-filter-li-6">
					@foreach (var item in root.Children)
					{
						if (item.IsDocumentType("cityItems"))
						{
							var city = (CityItems)item;
							<li><a class="all-coworking-locations" data-value="@city.Name.Replace(" ", "-")">@city.NavigationItemName</a></li>
						}
					}
				</ul>
			</div>
		</div>
	</div>
</div>
<div class="container-fluid">
	<!--Locations Data Filter-->
	<div class="container">
		<div class="row buildings-container">
			@{
				foreach (var item in root.Children)
				{
					if (item.IsDocumentType("cityItems"))
					{
						foreach (var building in item.Children)
						{
							if (building.IsDocumentType("buildings"))
							{
								foreach (var coworking in building.Children)
								{

									if (coworking.IsDocumentType("locationsCoworkingSpace"))
									{
										var featured = (Buildings)building;

										<div class="col-lg-4 col-md-4 col-sm-12 col-12 h-100 featured-locations-style all-coworking @featured.Parent.Name.Replace(" ","-")  ">

											<div class="card shadow mb-3 bg-white rounded">
												<div style="height: 175px;">
													<img class="card-img-top img-fluid"
														 style="max-width:100%; max-height: 100%; object-fit: cover"
														 data-src="@featured.FeaturedPhoto.Url">
												</div>

												<div class="card-body d-flex flex-column">

													<h4 class="card-title text-semibold"><a href="@featured.Url">@featured.FeaturedBuildingName</a></h4>
													<h5>
														<i class="fa fa-map-marker-alt" aria-hidden="true"></i>&nbsp;
														@featured.FeaturedBuildingCity
													</h5>
													<div class="spacer-sm"></div>
													<div class="card-text text-limit">@Html.Raw(featured.FeaturedDescription)</div>

													<a class="card-link mt-auto" href="#">Read More</a>
												</div>
											</div>
										</div>
									}
								}

							}
						}
					}
				}
			}
		</div>
	</div>
</div>