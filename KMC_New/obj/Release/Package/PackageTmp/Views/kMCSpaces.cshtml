@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.KMcspaces>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Web

@{
    Layout = "master.cshtml";

    var home = Umbraco.Content(Guid.Parse("0a9b12f9-b934-4cc4-817d-a0a645785ad2"));
}

<div id="aboveTheFold_overlapped">
    <!-- Above the Fold - Desktop View -->
    <div class="container-fluid p-0 desktop-view">
        <div class="row rowHeight">
            <div class="col-lg-6 col-sm-12 col-12"
                 style="background: #000 url('@Model.AboveTheFoldCol1BgImage.Url');
             position:relative;
             background-repeat: repeat;">

                <div class="overlapped_box center-items">
                    <div>
                        @Html.Raw(Model.AboveTheFoldHeading)
                        <div class="orange-divider-2px"></div>
                        @Html.Raw(Model.AboveTheFoldSubHeading)
                        @Html.Raw(Model.AboveTheFoldDescription)
                        <div class="spacer-sm"></div>
                        <a class="btn btn-primary" role="button" href="@Model.AboveTheFoldButtonLink">@Model.AboveTheFoldButtonText</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-sm-12 col-12 p-5 aboveTheFoldImage"
                 style="background: url(@Model.AboveTheFoldCol2BgImage.Url);
                    background-position:center;
                    background-repeat: no-repeat;
                    background-size: cover;
                    min-height: 400px;">
            </div>
        </div>

    </div>

    <!--Above the Fold - Mobile View -->
    <div class="container-fluid mobile-view"
         style="background: url(@Model.AboveTheFoldCol2BgImage.Url);
            background-position:center;
            background-repeat: no-repeat;
            background-size: cover;
            min-height: 300px;">

    </div>

    <div class="container-fluid mobile-view">
        <div class="container">
            @Html.Raw(Model.AboveTheFoldHeading)
            <div class="orange-divider-2px"></div>
            @Html.Raw(Model.AboveTheFoldSubHeading)
            @Html.Raw(Model.AboveTheFoldDescription)
            <div class="spacer-sm"></div>
            <a class="btn btn-primary w-100" role="button" href="@Model.AboveTheFoldButtonLink">@Model.AboveTheFoldButtonText</a>
        </div>
    </div>
</div>

<!--Serviced Offices Heading Section-->
<div class="container-fluid heading-section"
     style="border-top:1px solid #ccc;">
    <div class="container">
        @{
            foreach (var item in home.Children)
            {
                if (item.IsDocumentType("servicedOffices"))
                {
                    var serviced = (ServicedOffices)item;
                    <div class="row">
                        <div class="col-lg-8 col-md-12 col-sm-12 col-1-2">
                            <h2 class="text-extrabold">@serviced.Heading</h2>
                            <div class="text-limit">@serviced.Description</div>
                            <a class="text-semibold" href="/locations/">View our Office Spaces <i class="fas fa-angle-right align-middle"></i></a>
                        </div>

                        <div class="col-lg-4 col-md-12 col-sm-12 col-1-2 btn-right-style">
                            <a href="@serviced.Url" class="btn btn-primary" role="button" aria-pressed="false">@serviced.ButtonText</a>
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>

<!--1st row - office type in boxes-->
<div class="container-fluid kmcSpaces_services p-0" id="servicedOffices">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-12 kmcSpaces_services p-0 gutter-5px" id="standardPrivateOffices">
            @{
                foreach (var item in home.Children)
                {
                    if (item.IsDocumentType("standardPrivateOffices"))
                    {
                    var officeType = (StandardPrivateOffices)item;

                    <div class="h-100 w-100"
                         style="position: relative;
                                min-height:400px;">
                        <img class="img_object-fit" data-src="@officeType.BgImage.Url" />
                        <div class="spaces-boxes">
                            @Html.Raw(officeType.Heading)
                            <div class="text-limit">@officeType.Description</div>
                            <a href="@officeType.Url" class="btn btn-secondary" role="button" aria-pressed="false">@officeType.ButtonText</a>
                        </div>
                    </div>
                    }
                }
            }
        </div>

        <div class="col-lg-4 col-md-4 col-sm-12 col-12 kmcSpaces_services p-0 gutter-5px" id="coworkingSpace">

            @{
                foreach (var item in home.Children)
                {
                    if (item.IsDocumentType("coworkingSpace"))
                    {
                        var officeType = (CoworkingSpace)item;
                        <div class="h-100 w-100"
                             style="position: relative;
                                    min-height:400px;">
                            <img class="img_object-fit" data-src="@officeType.BgImage.Url" />
                            <div class="spaces-boxes">
                                @Html.Raw(officeType.Heading)
                                <div class="text-limit">@officeType.Description</div>
                                <a href="@officeType.Url" class="btn btn-secondary" role="button" aria-pressed="false">@officeType.ButtonText</a>
                            </div>

                        </div>
                         
                    }
                }
            }
        </div>

        <div class="col-lg-4 col-md-4 col-sm-12 col-12 kmcSpaces_services p-0" id="coworkingSpace">
            @{
                foreach (var item in home.Children)
                {
                    if (item.IsDocumentType("virtualOffices"))
                    {
                        var officeType = (VirtualOffices)item;

                        <div class="h-100 w-100"
                             style="position: relative;
                                    min-height:400px;">
                            <img class="img_object-fit" data-src="@officeType.BgImage.Url" />
                            <div class="spaces-boxes">
                                @Html.Raw(officeType.Heading)
                                <div class="text-limit">@officeType.Description</div>
                                <a href="@officeType.Url" class="btn btn-secondary" role="button" aria-pressed="false">@officeType.ButtonText</a>
                            </div>

                        </div>

                    }
                }
            }

        </div>
    </div>
</div>

