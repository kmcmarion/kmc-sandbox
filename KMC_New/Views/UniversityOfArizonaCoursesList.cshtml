@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.UniversityOfArizonaCoursesList>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
}

<div class="container-fluid">
	<div class="container">
		@Model.Heading
        <div class="orange-divider-2px"></div>
        <div class="spacer-sm"></div>
        <div class="row">
            @{
                foreach (var item in Model.Children)
                {
                    if (item.IsDocumentType("universityOfArizonaCourses"))
                    {
                        var cardItem = (UniversityOfArizonaCourses)item;

                        <div class="col-lg-4 col-md-4 col-sm-12 col-12 d-flex align-items-stretch mb-5 card-item">
                            <div class="mb3">
                                <div class="card-img-style mb-4">
                                    <a href="@cardItem.Url">
                                        <img class="img-fluid"
                                             style="width:100%; height: 100%; object-fit: cover"
                                             data-src="@cardItem.CardImage.Url"
                                             alt="@cardItem.CardImage.Name">
                                    </a>
                                </div>
                                <a href="@cardItem.Url">
                                    <h3 class="text-semibold text-orange text-uppercase">@cardItem.CourseTitle</h3>
                                </a>
                                <div class="text-limit">@cardItem.CardShortDescription</div>

                                <a class="btn btn-secondary mt-auto" href="@cardItem.Url">Learn More</a>
                            </div>
                        </div>
                    }
                }
            }
        </div>
	</div>
</div>